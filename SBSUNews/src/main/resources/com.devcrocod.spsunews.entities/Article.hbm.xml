<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.devcrocod.spsunews.entities.Article" table="article" schema="spsunewsbd">
        <id name="idArticle" column="id_article"/>
        <property name="title" column="title"/>
        <property name="date" column="date"/>
        <property name="content" column="content"/>
        <property name="image" column="image"/>
        <property name="valueSum" column="value_sum"/>
        <property name="editorArticleId" column="editor_article_id"/>
        <property name="commentArticleId" column="comment_article_id"/>
    </class>
</hibernate-mapping>